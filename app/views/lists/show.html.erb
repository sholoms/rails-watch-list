<div class='container'>
  <%= simple_form_for([@list, @bookmark]) do |f| %>
  <div class="row justfy-content-">
  <div class="col-5">
    <%= f.association :movie, prompt: 'Select a Movie'%>
  </div>
  <div class="col-5">
    <%= f.input :comment%>
  </div>
  <div class="col-2">
    <%= f.submit value: 'Add a movie', class:'btn btn-primary' %>
  </div>
  </div>
  <% end %>
  <div class="row justify-content-end align-items-center">
    <%= render 'shared/search' %>
  </div>

  <div class='d-flex justfy-between'>
    <div class='row m-2'>
    <% @movies.each do |movie| %>
      <div class='col-4'>
        <div class="card m-2" style="width: 100%;">
          <img src= <%= movie.poster_url %> class="card-img-top" alt="...">
          <div class="card-body">
            <h4 class="card-title"><%= movie.title %></h4>
            <h6 class="card-text">Rating: <%= movie.rating %></h6>
            <p class="card-text"><%= movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
</div>
